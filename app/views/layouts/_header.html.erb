<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "Mastodon Forum", root_path, class: "navbar-brand" %>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Menu
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to 'Topics', topics_path, class: "dropdown-item" %>
        <%= link_to 'Category', categories_path, class: "dropdown-item" %>
        <% if user_signed_in? %>
        <%= link_to "#{current_user.name}", "https://#{current_user.profile_url}", class: "dropdown-item" %>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "dropdown-item"%>
        <% else %>
        <%= link_to 'Sign In', user_mastodon_omniauth_authorize_path, class: "dropdown-item"%>
        <% end %>
      </div>
    </div>
    <div class="form-inline my-2 my-lg-0">
      <%= search_form_for @search, url: '/search'  do |f| %>
        <%= f.text_field :content_cont, class: "form-control mr-sm-2" %>
        <%= f.submit ("Search") , class: 'btn btn-outline-success my-2 my-sm-0'%>
      <% end %>
    </div>
</nav>